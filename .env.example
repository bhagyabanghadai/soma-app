# Database Configuration
# For development, you can use H2 (in-memory database) by leaving DATABASE_URL empty
# For production, use PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/soma_db
PGUSER=your_db_username
PGPASSWORD=your_db_password
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration
# Generate a secure random string for production
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters

# CORS Configuration
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# External API Keys (Optional)
# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key

# NASA EarthData API
NASA_API_KEY=your_nasa_api_key

# ZhipuAI GLM API for AI Assistant
ZHIPU_API_KEY=your_zhipu_api_key

# Air Quality API
AQICN_API_KEY=your_aqicn_api_key

# Application Configuration
NODE_ENV=development
PORT=3000
BACKEND_PORT=8080

# Logging Level
LOG_LEVEL=info

# Session Configuration
SESSION_SECRET=your_session_secret_key

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@soma-app.com

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_NASA_INTEGRATION=true
ENABLE_AIR_QUALITY=true

# Development Tools
ENABLE_SWAGGER=true
ENABLE_H2_CONSOLE=true

# Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30